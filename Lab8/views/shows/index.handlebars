<section>
  {{#if shows.length}}
    <h1>Shows Found</h1>
    <h2>{{query}}</h2>
    <a href="/">Make another search</a>
    <ul>
      {{#each shows}}
        <li>
          <a href="/shows/{{show.id}}" class="show-link">{{show.name}}</a>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p class="not-found">We're sorry, but no results were found for {{query}}.</p>
  {{/if}}
</section>